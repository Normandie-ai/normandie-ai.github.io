---
const baseUrl = import.meta.env.BASE_URL;
---

<script define:vars={{ baseUrl }}>
  // Load fonts dynamically with correct base path
  const fontBaseUrl = baseUrl.endsWith('/') ? baseUrl : baseUrl + '/';
  
  // Create font face declarations with proper paths
  const style = document.createElement('style');
  style.textContent = `
    @font-face {
      font-family: 'Avega Italic';
      font-style: normal;
      font-weight: 400;
      src: url('${fontBaseUrl}assets/fonts/Avega-Italic.woff') format('woff');
    }

    @font-face {
      font-family: 'Maax';
      font-style: normal;
      font-weight: 400;
      src: url('${fontBaseUrl}assets/fonts/Maax.woff') format('woff');
    }
  `;
  document.head.appendChild(style);
</script> 